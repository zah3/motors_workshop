{% extends"OldMotorsBundle:Admin/index:index.html.twig"%}
{% block title %}Administracja - usługi{% endblock %}
{% block content%}
    <div id="content">
        <h2>Modyfikacja zakładki - "usługi"</h2>
        <p>
            Poniżej możesz dodać nowy element, a jeszcze niżej edytować bądź usuwać istniejące
        </p>
        <p style="width: 99vw"></p>
    </div>
    <div class="form">
        {{ form(form) }}
    </div>
    <div class="promos">
        {% for offer in offers %}
            {% if loop.index % 3 != 0 %}
                <div class="row">
            {% endif %}
            <div class="promo">
                <div class="deal">
                    <span>{{ offer.name|capitalize }}</span>
                    <span>Deal!</span>
                </div>
                <span class="price">{{ offer.price }}PLN</span>
                <ul class="features">
                    <li>{{ offer.description }}</li>
                </ul>
                <a href="/admin/offers/edit/{{ offer.id }}"><button class="forSaleButton" style="vertical-align:middle"><span>Edytuj</span></button></a>
                <a href="/admin/offers/delete/{{ offer.id }}"><button class="forSaleButton" style="vertical-align:middle"><span>Usuń</span></button></a>
            </div>
            {% if loop.index % 3 == 0 or loop.last %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}